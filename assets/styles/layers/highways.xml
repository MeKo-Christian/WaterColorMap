<?xml version="1.0" encoding="utf-8"?>
<Map background-color="#00000000" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">

  <!-- Highways Layer Style -->
  <!-- Renders MAJOR roads in pure yellow (#FFFF00) for mask extraction -->

  <Style name="highways">
    <!-- z5-7: motorway only with wide stroke for visibility at very low zoom -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>20000000</MaxScaleDenominator>
      <MinScaleDenominator>4000000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="3.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z8-9: motorway only with wide stroke for visibility at low zoom -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>4000000</MaxScaleDenominator>
      <MinScaleDenominator>1000000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="4.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z10-11: motorway only (trunk in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>1000000</MaxScaleDenominator>
      <MinScaleDenominator>150000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="4.5" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z12: motorway only (trunk+primary+secondary in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>150000</MaxScaleDenominator>
      <MinScaleDenominator>75000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="4.5" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z13: motorway+trunk (primary+secondary+tertiary in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>75000</MaxScaleDenominator>
      <MinScaleDenominator>50000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="5.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'trunk' or [highway] = 'trunk_link'</Filter>
      <MaxScaleDenominator>75000</MaxScaleDenominator>
      <MinScaleDenominator>50000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="4.5" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z14: motorway+trunk+primary (secondary+tertiary+residential in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>50000</MaxScaleDenominator>
      <MinScaleDenominator>25000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="6.5" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'trunk' or [highway] = 'trunk_link'</Filter>
      <MaxScaleDenominator>50000</MaxScaleDenominator>
      <MinScaleDenominator>25000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="5.5" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'primary' or [highway] = 'primary_link'</Filter>
      <MaxScaleDenominator>50000</MaxScaleDenominator>
      <MinScaleDenominator>25000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="5.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z15-17: motorway+trunk+primary+secondary (tertiary+residential in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>25000</MaxScaleDenominator>
      <MinScaleDenominator>3000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="8.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'trunk' or [highway] = 'trunk_link'</Filter>
      <MaxScaleDenominator>25000</MaxScaleDenominator>
      <MinScaleDenominator>3000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="7.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'primary' or [highway] = 'primary_link'</Filter>
      <MaxScaleDenominator>25000</MaxScaleDenominator>
      <MinScaleDenominator>3000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="6.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'secondary' or [highway] = 'secondary_link'</Filter>
      <MaxScaleDenominator>25000</MaxScaleDenominator>
      <MinScaleDenominator>3000</MinScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="5.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>

    <!-- z18+: motorway+trunk+primary+secondary (tertiary+residential in roads layer) -->
    <Rule>
      <Filter>[highway] = 'motorway' or [highway] = 'motorway_link'</Filter>
      <MaxScaleDenominator>3000</MaxScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="14.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'trunk' or [highway] = 'trunk_link'</Filter>
      <MaxScaleDenominator>3000</MaxScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="12.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'primary' or [highway] = 'primary_link'</Filter>
      <MaxScaleDenominator>3000</MaxScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="11.0" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
    <Rule>
      <Filter>[highway] = 'secondary' or [highway] = 'secondary_link'</Filter>
      <MaxScaleDenominator>3000</MaxScaleDenominator>
      <LineSymbolizer stroke="#FFFF00" stroke-width="9.6" stroke-linecap="round" stroke-linejoin="round" />
    </Rule>
  </Style>

  <!-- Data Layer -->
  <Layer name="highways" srs="+proj=longlat +datum=WGS84 +no_defs">
    <StyleName>highways</StyleName>
    <Datasource>
      <Parameter name="type">ogr</Parameter>
      <Parameter name="file">DATASOURCE_PLACEHOLDER</Parameter>
      <Parameter name="layer">LAYER_PLACEHOLDER</Parameter>
    </Datasource>
  </Layer>

</Map>
